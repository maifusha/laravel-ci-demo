<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for laravel.</description>
    <arg name="tab-width" value="4" />
    <arg name="encoding" value="utf-8" />
    <arg value="s" />
    <rule ref="PSR2">
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace" />
    </rule>
    <file>./app</file>
    <file>./tests</file>
</ruleset>
